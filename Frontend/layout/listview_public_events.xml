<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/border_back"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/eventNamePub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/joinBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/joinBtn" />

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Join"
        android:drawableEnd="@drawable/ic_baseline_directions_walk_24"
        android:drawableTint="@color/black"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:background="@drawable/border_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/eventNamePub"
        app:layout_constraintStart_toEndOf="@+id/eventNamePub"
        app:layout_constraintTop_toTopOf="@+id/eventNamePub"
        app:srcCompat="@drawable/ic_baseline_info_24"
        app:tint="@color/black" />
</androidx.constraintlayout.widget.ConstraintLayout>